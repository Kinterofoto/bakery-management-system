# Bakery API Environment Variables
# Copy this file to .env and fill in your values

# App Configuration
ENVIRONMENT=development
DEBUG=true

# Supabase Configuration (required)
# Use your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co
# Use the SERVICE KEY (not anon key) for backend operations
SUPABASE_SERVICE_KEY=your-service-key-here
# Storage bucket for PDFs
SUPABASE_STORAGE_BUCKET=ordenesdecompra

# Google Cloud (for production deployment)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Microsoft Graph API (Azure AD App Registration)
# Create an app at https://portal.azure.com > Azure Active Directory > App registrations
MS_GRAPH_CLIENT_ID=your-azure-app-client-id
MS_GRAPH_CLIENT_SECRET=your-azure-app-client-secret
MS_GRAPH_TENANT_ID=your-azure-tenant-id
MS_GRAPH_TARGET_MAILBOX=comercial@pastrychef.com.co

# Webhook Configuration
# Base URL where the API is deployed (for Microsoft Graph webhooks)
WEBHOOK_BASE_URL=https://your-api-domain.run.app
# Optional secret for webhook validation
WEBHOOK_SECRET=your-webhook-secret

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
